<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Layout_notice_linear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_notice_popular"
        android:layout_below="@+id/Layout_notice_linear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ppl_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기글" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue_600"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_notice_category"
        android:layout_below="@id/Layout_notice_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/spn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spn_main"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/rdo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdo_btn1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:checked="true"
                android:text="최신순" />

            <RadioButton
                android:id="@+id/rdo_btn2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="인기순"/>

            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue_A400"/>
        </LinearLayout>
    </LinearLayout>


